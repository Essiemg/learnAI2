# =============================================================================
# LearnAI Backend Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment.
# NEVER commit your .env file to version control!

# =============================================================================
# Database Connection (REQUIRED)
# =============================================================================
# PostgreSQL connection string format:
# postgresql://username:password@host:port/database
#
# For local development:
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/ai_tutor

# =============================================================================
# JWT Authentication (REQUIRED)
# =============================================================================
# Secret key for signing JWT tokens - CHANGE THIS IN PRODUCTION!
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# =============================================================================
# ML Model Paths (Optional)
# =============================================================================
# Path to the trained policy model for strategy selection
POLICY_MODEL_PATH=./models/policy_model.joblib

# Path to Phi-3 model files (optional - for local inference)
PHI3_MODEL_PATH=./models/phi3-base
PHI3_LORA_PATH=./models/phi3-lora-adapter

# =============================================================================
# Application Settings
# =============================================================================
# Debug mode: enables SQL logging and skips Phi-3 loading for faster startup
DEBUG=True
